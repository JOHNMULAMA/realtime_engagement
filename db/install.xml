<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/realtime_engagement/db" VERSION="2024111500" COMMENT="Database schema for Real-time Engagement plugin" REFERENCES="core">
    <TABLES>

        <!-- Table: Stores individual student engagement events -->
        <TABLE NAME="local_realtime_engagement_events" COMMENT="Stores individual student engagement events">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" />
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" />
                <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" />
                <FIELD NAME="component" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT="unknown" SEQUENCE="false" />
                <FIELD NAME="action" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT="unknown" SEQUENCE="false" />
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="userid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id" />
                <KEY NAME="courseid_fk" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id" />
            </KEYS>
        </TABLE>

        <!-- Table: Stores calculated engagement scores for students -->
        <TABLE NAME="local_realtime_engagement_scores" COMMENT="Stores calculated engagement scores for students">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" />
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" />
                <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" />
                <FIELD NAME="score" TYPE="int" LENGTH="3" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" />
                <FIELD NAME="lastactivity" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" />
                <FIELD NAME="timeupdated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="userid_courseid_unique" TYPE="unique" FIELDS="userid,courseid" />
                <KEY NAME="userid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id" />
                <KEY NAME="courseid_fk_score" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id" />
            </KEYS>
        </TABLE>

    </TABLES>
</XMLDB>

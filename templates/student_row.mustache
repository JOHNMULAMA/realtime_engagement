<div class="d-flex align-items-center mb-3 p-2 border-bottom {{score_class}}">
    <img src="{{profileimageurl}}" class="rounded-circle mr-3" alt="{{fullname}}" width="40" height="40">
    <div class="flex-grow-1">
        <h6 class="mb-0">{{fullname}}</h6>
        <small class="text-muted">{{#str}}last_activity, local_realtime_engagement{{/str}}: {{last_activity_time}}</small>
    </div>
    <div class="text-right">
        <h5 class="mb-0">{{engagement_score}}%</h5>
        <small class="text-muted">{{#str}}engagement_score, local_realtime_engagement{{/str}}</small>
    </div>
</div>
